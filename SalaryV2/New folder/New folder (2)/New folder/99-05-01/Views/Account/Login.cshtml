@using SalaryV2.Models
@model LoginViewModel
@{
    ViewBag.Title = "..: فرم بازیابی اطلاعات:..";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-3">

            </div>

            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        برای ورود به سیستم نام کاربری و کلمه عبور را لطفا وارد نمائید

                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="alert-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            @if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                                <div class="alert alert-success">

                                    <p style="text-align:center">دوباره تلاش کنید</p>
                                </div>
                            }

                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="fa fa-star faa-wrench animated " style="color:#a70808"></span>
                                نام کاربری
                                <div style="">
                                    <div class="input-group" style="margin-bottom: 10px">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-user fa-2x">
                                            </i>
                                        </span>
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-lg", placeholder = "نام کاربری  ", autocomplete = "off" })
                                    </div>
                                    <b>
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </b>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="fa fa-star faa-wrench animated " style="color:#a70808"></span>

                                کلمه عبور
                                <div style="">
                                    <div class="input-group " style="margin-bottom: 10px" id="datePicker">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock fa-2x">
                                            </i>
                                        </span>
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "کلمه عبور  ", autocomplete = "off" })
                                    </div>
                                    <b>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </b>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <button class="btn  btn-success  fa-x" data-last="Finish ">
                                    جستجو
                                    <i class="fa fa-search-minus"></i>
                                </button>
                                <a href="@Url.Action("search", "EmpPayWagQazvins")" class="btn btn-default fa-x">
                                    بازگشت
                                    <i class="glyphicon glyphicon-arrow-left"></i>

                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
}
<footer>
    <hr />

    <div style="text-align:center">
        <img src="~/Content/Image/salaryfooter.png" style="" />
    </div>
</footer>
