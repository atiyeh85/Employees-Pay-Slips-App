@model SalaryV2.Models.GetCode
@{
    ViewBag.Title = "..: فرم ایجاد شناسه امنیتی  :..";
}
<style>
    .panel-heading{
        text-align:center;
    }
</style>
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="  form-horizontal">
     
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      ایجاد شناسه امنیتی
                  </div>
                  <div class="panel-body">
                      @if (TempData["message"] != null)
                      {
                          <div class="alert alert-success" style="color:#a30e0e;font-family:Tahoma;font-size:medium;text-align:center">
                              @TempData["message"]
                          </div>
                      }
                          <div>
                              @Html.DropDownList("Contid", null, "---انتخاب نوع قرار داد---", new { @class = "form-control input-lg" })
                          </div>
                      <div>
                          <span class="fa fa-star faa-wrench animated " style="color:#a70808"></span>
                          کد ملی
                          <div style="">
                              <div class="input-group" style="margin-bottom: 10px">
                                  <span class="input-group-addon">
                                      <i class="fa fa-id-card fa-2x">
                                      </i>
                                  </span>
                                  @Html.TextBoxFor(model => model.e1, new { @class = "form-control input-lg", placeholder = "   کد ملی", autocomplete = "off" })
                              </div>
                              <b>
                                  @Html.ValidationMessageFor(model => model.e1, "", new { @class = "text-danger" })
                              </b>
                          </div>
                      </div>
                      <div>
                          <span class="fa fa-star faa-wrench animated " style="color:#a70808"></span>

                          شماره حساب
                          <div style="">
                              <div class="input-group" style="margin-bottom: 10px">
                                  <span class="input-group-addon">
                                      <i class="fa fa-id-card fa-2x">

                                      </i>
                                  </span>
                                  @Html.TextBoxFor(model => model.b2, new { @class = "form-control input-lg", placeholder = "   شماره حساب", autocomplete = "off" })
                              </div>
                              <b>
                                  @Html.ValidationMessageFor(model => model.b2, "", new { @class = "text-danger" })
                              </b>
                          </div>
                      </div>

                  </div>
                  <div class="row">
                      <div class="form-group">
                          <div class="col-lg-offset-4 col-md-8">
                              <button class="btn  btn-success  fa-x" data-last="Finish ">
                                  ایجاد  شناسه  
                                  <i class="fa fa-floppy-o"></i>
                              </button>
                              <a href="@Url.Action("search", "EmpPayWagQazvins")" class="btn btn-default fa-x">
                                  بازگشت
                                  <i class="fa fa-arrow-left"></i>

                              </a>
                          </div>
                      </div>
                  </div>
              </div>
            </div>
        </div>
    </div>
}

<footer>
    <hr />

    <div style="text-align:center">
        <img src="~/Content/Image/salaryfooter.png" style="" />
    </div>
</footer>


